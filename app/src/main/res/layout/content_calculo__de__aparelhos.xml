<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/ic_azulbom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_calculo__de__aparelhos"
    tools:context="br.senac.pi.consumoarcondicionado.Calculo_De_AparelhosActivity"
    android:orientation="vertical">

    <TextView
        android:textColor="#F5F5DC"
        android:text="CALCULO DE CONSUMO DE ELETRODOMESTICO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <Button
            android:id="@+id/btnchamaarcondicionado"
        android:layout_marginTop="30dp"
        android:text="arcondicionado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnchamamaquinadelavar"
        android:layout_marginTop="30dp"
        android:text="maquina de lavar roupa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnchamaferroeletrico"
        android:layout_marginTop="30dp"
        android:text="ferro eletrico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnchamageladeira"
        android:layout_marginTop="30dp"
        android:text="geladeira"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btnlistaraparelho"
        android:text="Listar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bntsair"
        android:layout_marginTop="30dp"
        android:text="sair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
